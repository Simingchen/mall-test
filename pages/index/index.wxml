<view class="search-bar">
    <van-search disabled shape="round" placeholder="请输入产品/厂家" use-action-slot maxlength="50" bindtap="goLocalUrl"
    data-url="/pageSub/index/searchList/index">
      <view slot="action" catchtap="goLocationUrl" class="location-box flex-center">
        <view class="iconfont iconai204"></view>
        附近专卖店
      </view>
    </van-search>
  </view>
<!-- 轮播图 -->
<swiper class='banner-list' indicatorDots circular autoplay
  indicatorActiveColor="rgba(255,255,255,.6)" indicatorColor="rgba(255,255,255, .8)">
  <swiper-item class='item' wx:for="{{bannerList}}" wx:key="index" bindtap="goBannerUrl" data-item="{{item}}">
    <image class="img" mode='aspectFill' src="{{item.img_url}}" />
  </swiper-item>
</swiper>
<van-cell custom-class="msg-cell" title="澳米特头条" is-link border="{{false}}">
  <swiper class='msg-swiper-list' circular autoplay vertical>
    <swiper-item class='item' wx:for="{{msgList}}" wx:key="index" bindtap="goInfoDetail" data-item="{{item}}">
      <view class="txt">{{item.title}}</view>
    </swiper-item>
  </swiper>
</van-cell>
