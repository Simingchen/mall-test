.cart-page .disabled .van-image:after {
  position: absolute;
  content: "失效";
  width: 2rem;
  height: 0.85rem;
  left: 0.9rem;
  bottom: 0.25rem;
  text-align: center;
  line-height: 0.85rem;
  color: #fff;
  font-size: 0.5rem;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 0.85rem;
}

.cart-page .check-bar {
  height: 120rpx;
}
.cart-page .van-button--danger {
  background: -webkit-linear-gradient(left, #ff6034, #ee0a24);
    background: linear-gradient(to right, #ff6034, #ee0a24);
    border:0;
}
.empty-box{
  text-align: center;
}
.empty-box .tit{
  font-size: 30rpx;
}
.empty-box .txt{
  font-size: 24rpx;
  line-height: 100rpx;
  color:#999;
}
.van-empty__image{
  display: none;
}
