<wxs module="filter" src="../../filter.wxs"></wxs>
<view class="member-page">
	<view class="top-panel">
		<view class="flex-row-center">
			<navigator hover-class="none" url="/pageSub/mine/setting/index" wx:if="{{userInfo.openid}}">
				<view class="iconfont iconshezhi"></view>
			</navigator>
			<view class="share-code flex-start" bindtap="setPoster" wx:if="{{userInfo.type != 1}}">
				<text class="iconfont iconico"></text>
				分享码
			</view>
		</view>
		<view class="flex-center avatar-box">
			<image class="avatar" mode="aspectFill" src="{{userInfo.headimg}}" />
			<view class="name-box flex-start" wx:if="{{userInfo.openid}}">
				{{userInfo.nickname}} <view class="label flex-center">{{['普通用户', '经销商'][userInfo.type - 1]}}</view>
				<view class="iconfont iconzuanshi" wx:if="{{userInfo.is_vip > 0}}"></view>
			</view>
			<navigator url="/pages/login/index" class="name-box flex-start" wx:if="{{!userInfo.openid}}">
				登录
			</navigator>
		</view>
		<view class="flex-row-center recommender-bar">
			<block wx:if="{{userInfo.openid}}">
				<view class=""></view>
				<view class="recommender" wx:if="{{userInfo.promoter_user}}">
					推荐人：{{userInfo.promoter_user}}
				</view>
			</block>
		</view>
		<view class="user-tool flex-box">
			<view class="item flex-center" bindtap="goUrl" data-url="/pageSub/mine/orderList/index">
				<text class="iconfont iconwodedingdan0101"></text>
				我的订单
			</view>
			<view class="item  flex-center" bindtap="goUrl" data-url="/pageSub/wallet/wallet/index" wx:if="{{userInfo.type != 1}}">
				<text class="iconfont icontianchongxing-1"></text>
				钱包
			</view>
			<view class="item  flex-center" bindtap="goUrl" data-url="/pageSub/mine/addressList/index">
				<text class="iconfont icondizhi"></text>
				地址
			</view>
		</view>
	</view>

	<view class="panel">
		<van-cell title="我的工作" border="{{false}}"></van-cell>
		<view class="tool-list flex-box">
			<view class="item flex-start" wx:if="{{userInfo.type != 1}}" bindtap="goUrl" data-url="/pageSub/mine/orderList/index">
				<view class="iconfont icondingdan-"></view>
				<view class="txt">客户订单</view>
			</view>
			<view class="item flex-start" wx:if="{{userInfo.type != 1}}" bindtap="goUrl" data-url="/pageSub/customer/customerList/index">
				<view class="iconfont iconkehu"></view>
				<view class="txt">渠道客户</view>
			</view>
			<!-- <view class="item flex-start" bindtap="goUrl" data-url="/pageSub/customer/customerEdit/index">
				<view class="iconfont iconkehu1"></view>
				<view class="txt">添加客户</view>
			</view> -->
			<button class="item flex-start noborder" open-type="contact">
				<view class="iconfont iconzixun"></view>
				<view class="txt">我的咨询</view>
			</button>
			<button class="item flex-start noborder" open-type="share">
				<view class="iconfont iconfenxiang"></view>
				<view class="txt">每日分享</view>
			</button>
			<view class="item flex-start" bindtap="goUrl" data-url="/pageSub/event/eventList/index">
				<view class="iconfont icondingdan-"></view>
				<view class="txt">活动报名</view>
			</view>
		</view>
	</view>

	<view class="panel">
		<van-cell title="关于我们" border="{{false}}"></van-cell>
		<view class="tool-list flex-box">
			<view class="item flex-start" bindtap="goUrl" data-url="/pageSub/mine/aboutUs/index">
				<view class="iconfont">
					<image src="../../static/logo1.jpg" class="img" mode="aspectFill"></image>
				</view>
				<view class="txt">丽合三元</view>
			</view>
			<view class="item flex-start" bindtap="goUrl" data-url="/pageSub/mine/newsList/index">
				<view class="iconfont icongonggao"></view>
				<view class="txt">公告</view>
			</view>
		</view>
	</view>

</view>

<van-popup show="{{ isShowShare }}" bind:close="closeShare" round closeable close-icon="close" z-index="{{101}}">
	<view class='share-moment flex-center'>
		<canvas type="2d" id="canvas" canvas-id="shareCanvas" class="canvas" style="width: 200px; height: 200px;"></canvas>
	</view>
</van-popup>

<!-- tabbar -->
<tabBar selected="3" cartNum="{{cartNum}}" />