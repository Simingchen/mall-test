
page{
  background-color: #f6f7fa;
  min-height: 100vh;
}

.member-page .van-tabbar-item__icon .img {
  width: 54rpx;
  height: 44rpx;
}


.panel {
  width: 710rpx;
  margin: 0 auto 20rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.member-page .top-panel {
  position: relative;
  padding-top: 30rpx;
  margin-bottom: 30rpx;
  color: #fff;
  background: #00a5a5;
  font-size: 24rpx;
  font-weight: 500;
}

.avatar-box{
  flex-direction: column;
  text-align: center;
}
.top-panel .avatar {
  display: block;
  width: 110rpx;
  height: 110rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 110rpx;
  background: #eee;
}
.top-panel .label{
  padding: 8rpx 10rpx;
  background: rgba(0,0,0,.5);
  margin: 10rpx 10rpx 0;
  border-radius: 8rpx;
  font-size: 20rpx;
  color:#ffff80;
}
.iconzuanshi{
  color:#ffff80;
}
.recommender-bar{
  margin-top: 30rpx;
  height: 60rpx;
}
.recommender{
  padding: 15rpx 20rpx;
  background: rgba(0,0,0,.5);
  border-radius: 99rpx 0 0 99rpx;
  font-size: 20rpx;
}
.iconshezhi{
  font-size: 40rpx;
  margin-left: 20rpx;
}
.share-code{
  padding: 5rpx 10rpx;
  background: rgba(0,0,0,.5);
  margin-right: 20rpx;
  border-radius: 8rpx;
}
.share-code .iconfont{
  margin-right: 6rpx;
}

.member-page .van-cell {
  color: #333;
  line-height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  font-weight: 500;
}

.member-page .van-cell .van-cell__right-icon {
  line-height: 100rpx;
  font-size: 24rpx;
}

.member-page .van-tabbar-item {
  color: #999;
  font-size: 24rpx;
}


.tool-list {
  flex-wrap: wrap;
}
.tool-list .item {
  flex-direction: column;
  flex-basis: 25%;
  padding:0;
  margin: 0;
  padding-bottom: 40rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  background: transparent;
}
.tool-list .iconfont {
  width: 50rpx;
  height: 50rpx;
  font-size: 50rpx;
}
.noborder:after{
  border:0;
}
.user-tool{
  width: 710rpx;
  height: 80rpx;
  margin: 0 auto;
  background: #333;
  border-radius: 12rpx;
}
.user-tool .iconfont{
  margin-right: 10rpx;
}
.user-tool .item{
  flex:1;
}

.share-moment {
  width: 600rpx;
  padding: 100rpx 0;
}
.canvas{
  display: block;
  margin: 0 auto;
}
.share-moment .btn-box {
  padding: 1060rpx 60rpx 0 60rpx;
}

.share-moment .bottom {
  width: 300px;
  height: 40px;
  background-color: white;
}