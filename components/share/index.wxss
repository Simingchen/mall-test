.share-box {
  height: 120rpx;
}

.share-box .box {
  position: fixed;
  width: 100%;
  padding: 0 70rpx;
  height: 120rpx;
  bottom: 0rpx;
  background: #fff;
  z-index: 20;
}


.share-box .box .item{
  width:289rpx;
  height:80rpx;
  border-radius:40rpx;
  border:1rpx solid #1D9EFEFF;
  color: #1D9EFEFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.share-box .box .item.active{
  color:#fff;
  background:rgba(29,158,254,1);
}

.share-moment {
  width: 300px;
  height: 360px;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 100rpx;
  margin: auto;
  z-index: 200;
}
.mask{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom:0;
  background: rgba(0,0,0,.3);
  z-index: 20;
}
.share-moment .btn-box {
  padding: 1060rpx 60rpx 0 60rpx;
}

.share-moment .bottom {
  width: 300px;
  height: 40px;
  background-color: white;
}
