.share-popup {
  display: flex;
  padding: 40rpx;
}
.share-popup .img{
  display: block;
  width: 108rpx;
  height: 108rpx;
  margin: 0 auto;
}
.share-popup .item{
  width: 200rpx;
  text-align: center;
  line-height: 90rpx;
  padding:0;
  margin: 0;
  font-size: 28rpx;
}