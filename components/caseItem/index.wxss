.goods-list{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 25rpx;
}
.goods-item{
  width: 330rpx;
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  background: #fff;
  font-size: 32rpx;
  line-height: 46rpx;
}
.goods-item .img{
  display: block;
  border-radius: 10rpx;
  width: 320rpx;
  height: 220rpx;
  background: #eee;
  border: 1rpx solid #eee;
}
.goods-item .tit{
  margin-top:20rpx;
  height: 100rpx;
  word-break: break-all;
}
.avator-box{
  line-height: 50rpx;
  font-size: 24rpx;
}
.avator-box .txt{
  width: 280rpx;
  overflow: hidden;
	white-space: nowrap;
  text-overflow: ellipsis;
  color: #aaa;
}
.avator-box .flex-box{
  align-items: center;
}
.goods-item .avator{
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin-right: 6rpx;
  border-radius: 30rpx;
  background: #eee;
  border: 1rpx solid #f2f2f2;
}
.count{
  color:#999;
}
