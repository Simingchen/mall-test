.card-item {
  padding: 43rpx 25rpx 43rpx 43rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.card-item:last-child{
  border-bottom: 0;
}
.card-item .img{
  width: 180rpx;
  height: 240rpx;
  margin-right: 24rpx;
  border-radius: 10rpx;
  background: #eee;
}
.card-item .name{
  line-height: 48rpx;
  color:#333;
  font-size: 32rpx;
  font-weight: 500;
}
.card-item .job{
  color:#757575;
  margin-left: 8rpx;
  font-weight: 400;
  font-size: 26rpx;
}
.card-item .desc{
  margin-bottom:34rpx;
  line-height: 40rpx;
  color:#757575;
  font-size: 28rpx;
}
.card-item .tags .tit{
  color:#999;
  font-size: 28rpx;
}
.card-item .tags .flex-box{
  flex-wrap: wrap;
}
.card-item .tag{
  max-width: 180rpx;
  height: 28rpx;
  /* padding: 0 10rpx; */
  margin-right: 16rpx;
  margin-top: 16rpx;
  text-align: center;
  line-height: 28rpx;
  font-size: 22rpx;
  color:#3989FFFF;
  overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.card-item .tag.c9{
  color:#999;
}
.card-item .tag:last-child{
  margin-right: 0;
}
.company{
  line-height: 50rpx;
  color: #666;
}
.add{
  font-size: 24rpx;
  font-weight: 400;
  color:#008cd6;
}
