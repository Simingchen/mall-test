.tabbar-box{
  position: fixed;
  bottom:0;
  left:0;
  width: 100%;
  height: 98rpx;
  z-index: 100;
  display: flex;
  text-align: center;
  color:#d7d7d7;
  background: #fff;
  border-top: 1rpx solid #f2f2f2;
}
.tabbar-box .item{
  position: relative;
  flex: 1;
  font-size: 20rpx;
  color:#333;
  line-height: 30rpx;
}

.iconfont{
  margin-bottom: 8rpx;
  height: 46rpx;
  font-size: 46rpx;
  line-height: 46rpx;
}
.hr100{
  height: 98rpx;
}
.tabbar-box .active{
  color:#00a5a5;
}
.tabbar-box .active .iconfont{
  color:#00a5a5;
}

.van-tabbar--safe {
  padding-bottom: env(safe-area-inset-bottom);
}
.van-tabbar {
  height: var(--tabbar-height,50px);
  box-sizing: content-box;
}