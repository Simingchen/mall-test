<view class="van-address-list">
  <van-field clearable label="持卡人" maxlength="10" value="{{ name }}" placeholder="请输入持卡人姓名" disabled="{{isEdit}}" bind:change="onChangeInput" data-type="name"/>
  <van-field clearable label="卡号" maxlength="20" value="{{ cardNum }}" placeholder="请输入卡号" disabled="{{isEdit}}"  bind:change="onChangeInput" data-type="cardNum"/>
  <van-field clearable label="开户行" maxlength="10" value="{{ bank }}" placeholder="请输入开户行" disabled="{{isEdit}}"  bind:change="onChangeInput" data-type="bank"/>
  <van-field clearable label="手机号" maxlength="11" type="number" value="{{ phone }}" disabled="{{isEdit}}"  placeholder="收货人手机号" bind:change="onChangeInput" data-type="phone"/>
</view>

<view class="btns">
  <van-button wx:if="{{!isEdit}}" custom-class="add-btn" color="#00a5a5" block round bind:click="save">保存</van-button>
  <van-button wx:if="{{isEdit}}" custom-class="delete-btn" color="#00a5a5" block round bind:click="remove">删除</van-button>
</view>
