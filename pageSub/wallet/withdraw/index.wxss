page{
  background-color: #f6f7fa;
  padding-top:30rpx;
  min-height: 100vh;
}
.panel {
  width: 690rpx;
  margin: 0 auto 20rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.comfirm-btn{
  display: block;
  width: 630rpx;
  height: 86rpx;
  margin-top: 50rpx;
}
.txt{
  font-size: 24rpx;
}
.addr-box{
  padding-bottom: 30rpx;
}
.van-cell__value{
  overflow: visible!important;
}

.pop-pay{
  width: 638rpx;
  height: 580rpx;
  padding: 0 50rpx 60rpx;
}
.pop-pay.van-popup--round{
  border-radius: 20rpx!important;
  top:40%!important;
}
.pay-pop{
  /* width: 420rpx; */
}
.pop-input .van-cell__title{
  font-size: 32rpx;
}
.pay-pop .price{
  font-size: 60rpx;
  font-weight: 600;
  text-align: center;
  line-height: 160rpx;
}
.pay-pop .price .i{
  font-size: 38rpx;
}
.tips{
  height: 127rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e5e5e5;
  line-height: 46rpx;
}
.tips .txt .c{
  color:#999;
}
.password-box{
  width: 360rpx;
  border-top: 1rpx solid #ccc;
  border-left: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}

.input-pass{
  padding: 4rpx;
  margin-top: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 6rpx;
}
.pay-pop .van-cell{
  padding: 10rpx 16rpx;
}