.title{
  font-size: 36rpx;
  line-height: 52rpx;
  padding: 20rpx 40rpx 0;
  font-weight: 500;
}
.sub-tit {
  color: #7e7e7e;
  padding: 20rpx 40rpx;
}
.time{
  color: #7e7e7e;
}
.sub-tit .item{
  margin-right: 20rpx;
}
.time-box{
  padding: 20rpx 40rpx 60rpx;
}
.content{
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 46rpx;
}
.vip-box {
  position: relative;
  text-align: center;
  color:#ff9900;
  line-height: 80rpx;
}
.vip-box .res{
  position: relative;
  z-index: 2;
}
.vip-box:before{
  position: absolute;
  content: "";
  bottom:0;
  left:0;
  width: 100%;
  height: 1px;
  box-shadow: 1px -100px 40px 60px rgba(255,255,255,.95);
}
.vip-box .btn{
  width: 670rpx;
  height: 80rpx;
  margin: 0 auto;
  line-height: 80rpx;
  text-align: center;
  color:#fff;
  background: #ff9900;
  border-radius: 6rpx;
}
.tag-box{
  display: flex;
  padding: 116rpx 40rpx 60rpx;
}
.tag-box .item{
  line-height: 50rpx;
  padding: 0 15rpx;
  color:#fff;
  border-radius: 6rpx;
  background: #ffce86;
  margin-right: 28rpx;
  margin-bottom: 28rpx;
}

.main-img{
  width: 100%;
}