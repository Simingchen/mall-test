.top-box{
  padding: 0 25rpx;
}
.banner{
  display: block;
  width: 700rpx;
  height: 270rpx;
  margin: 0 auto;
}
.title{
  font-size: 46rpx;
  line-height: 68rpx;
  padding-top: 20rpx;
  font-weight: 500;
}
.sub-tit {
  color:#aaa;
}
.sub-tit .item{
  margin-right: 20rpx;
}
.time-box{
  padding: 25rpx;
}
.content{
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 46rpx;
}
.vip-box {
  position: relative;
  text-align: center;
  color:#ff9900;
  line-height: 80rpx;
}
.vip-box .res{
  position: relative;
  z-index: 2;
}
.vip-box:before{
  position: absolute;
  content: "";
  bottom:0;
  left:0;
  width: 100%;
  height: 1px;
  box-shadow: 1px -100px 40px 60px rgba(255,255,255,.95);
}
.vip-box .btn{
  width: 670rpx;
  height: 80rpx;
  margin: 0 auto;
  line-height: 80rpx;
  text-align: center;
  color:#fff;
  background: #ff9900;
  border-radius: 6rpx;
}
.title-box .h1{
  line-height: 120rpx;
  font-size: 38rpx;
  padding-left:25rpx;
  /* border-top: 20rpx solid #f2f2f2; */
}
.title-box.flex-box .h1{
  padding-right: 40rpx;
}
.btns .diasbled{
  background: #999!important;
}
.btns .btn.disabled{
  background: #aaaaaa;
}
.btns .collect.diasbled{
  color: #999!important;
  background: #fff!important;
  border: 1rpx solid #999;
}
.goods-list{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
}
.goods-item{
  width: 330rpx;
  margin-bottom: 30rpx;
  background: #fff;
  font-size: 36rpx;
  line-height: 46rpx;
}
.goods-item .img{
  display: block;
  border-radius: 10rpx;
  width: 320rpx;
  height: 220rpx;
}
.goods-item .tit{
  margin-top:20rpx;
  height: 100rpx;
  word-break: break-all;
}

.tag-box{
  display: flex;
  padding-top: 20rpx;
}
.tag-box .item{
  line-height: 50rpx;
  padding: 0 15rpx;
  color:#0595f6;
  border-radius: 6rpx;
  margin-right: 28rpx;
  margin-bottom: 28rpx;
  border: 2rpx solid #0595f6;
}

.btns{
  width: 585rpx;
  margin: 0 auto 40rpx;
}
.btns .btn{
  width: 280rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color:#fff;
  background: #ff9900;
  border-radius: 8rpx;
}
.btns .btn.disabled{
  background: #aaaaaa;
}
.event-info{
  padding: 25rpx;
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
}
.event-info .line{
  display: flex;
  margin-bottom: 40rpx;
  line-height: 40rpx;
}
.event-info .line .lab{
  width: 140rpx;
}
.event-info .line .con{
  width: 520rpx;
}
.event-info .line .con .company{
  padding-bottom: 20rpx;
  color: #0595f6;
}
.file-box{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  min-width: 200rpx;
}
.file{
  padding: 20rpx 40rpx;
}
.van-tab__pane{
  min-height: 400rpx!important;
}
.empty{
  padding: 40px;
  text-align: center;
  color:#999;
}