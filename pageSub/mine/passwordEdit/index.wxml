<view class="van-address-list">
  <van-field clearable label="手机" maxlength="11" type="number" model:value="{{ phone }}" bindinput="changeInput" data-tag="phone" placeholder="请输入手机号" />
  <van-field clearable label="支付密码" maxlength="15" model:value="{{ password }}" bindinput="changeInput" data-tag="password" placeholder="请输入支付密码" />
</view>
<view class="btns">
  <van-button custom-class="add-btn" color="#00a5a5" block round bind:click="save">保存</van-button>
</view>