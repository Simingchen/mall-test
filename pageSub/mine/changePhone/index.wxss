.input-box{
  line-height: 70rpx;
  margin-top: 30rpx;
  padding-left: 25rpx;
  padding-right: 30rpx;
  border-bottom: 2rpx solid #f6f6f6;
}
.label{
  position: relative;
  width: 240rpx;
  padding-left:14rpx;
  color:#717171;
  /* text-align:justify; */
}
/* .label:after{
  content:'.';
