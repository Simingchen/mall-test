page{
  background: #f8f8f8;
}

.van-cell{
  align-items: center;
}
.avatar-box{
  width: 100%;
  height: 300rpx;
  padding-top: 40rpx;
  background: #fff;
  align-items: center;
  flex-direction: column;
}
.avatar-box .txt{
  line-height: 60rpx;
  font-size: 24rpx;
}

.avatar {
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  background: #eee;
  overflow: hidden;
}
.confirm-btn{
  display: block;
  width: 600rpx;
  margin: 40rpx auto;
}