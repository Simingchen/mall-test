}

.orderDetail-page .tool-box {
  height: 100rpx;
}

.orderDetail-page .tool-bar {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  padding:24rpx 30rpx 0;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: reverse;
  -ms-flex-direction: row-reverse;
  flex-direction: row-reverse;
  background: #fff;
}

.orderDetail-page .tool-bar .btn {
  width: 4rem;
  height: 60rpx;
  margin-left:24rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 60rpx;
  font-size: 24rpx;
  color: #fff;
  background: #ee0a24;
}

.orderDetail-page .van-count-down {
  font-size:24rpx;
  color: #fff;
}

.orderDetail-page .tool-bar .count-down-btn {
  width: 240rpx;
}

.address-show {
