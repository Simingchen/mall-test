.bor1 {
  position: relative;
}
.bor1:before {
  content: "";
  position: absolute;
  bottom: 0;
  height: 1PX;
  width: 100%;
  background: rgba(235, 235, 235, 1);
  transform-origin: 0% 50%;
  transform: scaleY(.3);
}
