/* // 单双行换行 */
.ellipsis {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.ellipsis2 {
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
  -webkit-line-clamp: 2;
  /*! autoprefixer: ignore next */
	-webkit-box-orient: vertical;
}

