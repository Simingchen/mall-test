}
page,
view,
input,
text,
form,
navigator,
rich-text,
picker,
scroll-view,
cover-view,
swiper,
swiper-item,
open-data, textarea {
  box-sizing: border-box;
}
rich-text,
open-data,
form {
  display: block;
